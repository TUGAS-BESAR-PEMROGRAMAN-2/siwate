@{
    ViewData["Title"] = "Check-In Pra-Interview";
}

<div class="max-w-3xl mx-auto py-8 px-4">
    <div class="text-center mb-6">
        <h1 class="text-3xl font-bold text-slate-900">Persiapan Interview</h1>
        <p class="text-slate-500 mt-2">Sistem sedang memeriksa kesiapan perangkat dan lingkungan Anda.</p>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-200">
        
        <!-- Video Preview Area -->
        <div class="relative bg-black aspect-video flex items-center justify-center overflow-hidden group">
            <video id="webcam" autoplay playsinline muted class="w-full h-full object-cover transform scale-x-[-1]"></video>
            
            <!-- Overlay Info -->
            <div id="loadingOverlay" class="absolute inset-0 flex flex-col items-center justify-center bg-slate-900/80 z-10 transition-opacity duration-500">
                <div class="w-12 h-12 border-4 border-brand-500 border-t-transparent rounded-full animate-spin mb-4"></div>
                <p class="text-white font-medium">Mengakses Kamera & Mikrofon...</p>
                <p class="text-xs text-slate-400 mt-2">Harap izinkan akses browser</p>
            </div>

            <!-- Face Scanning Animation (Hidden by default) -->
            <div id="scanOverlay" class="absolute inset-0 hidden pointer-events-none">
                <div class="absolute top-1/4 left-1/4 right-1/4 bottom-1/4 border-2 border-brand-400/50 rounded-lg"></div>
                <div class="absolute top-0 left-0 w-full h-1 bg-brand-400/50 shadow-[0_0_15px_rgba(56,189,248,0.5)] animate-[scan_2s_linear_infinite]"></div>
            </div>
            
            <!-- Analysis Labels (Simulated Intelligence) -->
            <div id="aiLabels" class="absolute bottom-4 left-4 flex gap-2 opacity-0 transition-opacity duration-500">
                <span class="px-2 py-1 bg-black/50 backdrop-blur-md rounded text-xs text-white border border-white/10 flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-green-500"></span> Wajah Terdeteksi
                </span>
                <span id="lightLabel" class="px-2 py-1 bg-black/50 backdrop-blur-md rounded text-xs text-white border border-white/10 flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-yellow-500"></span> Pencahayaan
                </span>
            </div>
        </div>

        <!-- Validation Status List -->
        <div class="p-6 grid grid-cols-1 sm:grid-cols-2 gap-4 bg-slate-50 border-t border-slate-200">
            <!-- Mic Check -->
            <div class="flex items-center gap-3 p-3 bg-white rounded-lg border border-slate-200 shadow-sm" id="checkMic">
                <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 status-icon transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path></svg>
                </div>
                <div>
                    <h4 class="font-semibold text-sm text-slate-700">Mikrofon</h4>
                    <p class="text-xs text-slate-400 status-text">Mendeteksi...</p>
                </div>
                <div class="ml-auto">
                    <div class="w-3 h-3 rounded-full bg-slate-300 status-dot"></div>
                </div>
            </div>

            <!-- Cam Check -->
            <div class="flex items-center gap-3 p-3 bg-white rounded-lg border border-slate-200 shadow-sm" id="checkCam">
                <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 status-icon transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
                </div>
                <div>
                    <h4 class="font-semibold text-sm text-slate-700">Kamera</h4>
                    <p class="text-xs text-slate-400 status-text">Mendeteksi...</p>
                </div>
                <div class="ml-auto">
                    <div class="w-3 h-3 rounded-full bg-slate-300 status-dot"></div>
                </div>
            </div>

            <!-- Light Check -->
            <div class="flex items-center gap-3 p-3 bg-white rounded-lg border border-slate-200 shadow-sm" id="checkLight">
                <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 status-icon transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                </div>
                <div>
                    <h4 class="font-semibold text-sm text-slate-700">Pencahayaan</h4>
                    <p class="text-xs text-slate-400 status-text">Menganalisis...</p>
                </div>
                <div class="ml-auto">
                    <div class="w-3 h-3 rounded-full bg-slate-300 status-dot"></div>
                </div>
            </div>

            <!-- Attire Check (Simulated) -->
            <div class="flex items-center gap-3 p-3 bg-white rounded-lg border border-slate-200 shadow-sm" id="checkAttire">
                <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 status-icon transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                </div>
                <div>
                    <h4 class="font-semibold text-sm text-slate-700">Kerapian</h4>
                    <p class="text-xs text-slate-400 status-text">Scanning AI...</p>
                </div>
                <div class="ml-auto">
                    <div class="w-3 h-3 rounded-full bg-slate-300 status-dot"></div>
                </div>
            </div>
        </div>

        <!-- Action Area -->
        <div class="p-6 bg-white border-t border-slate-200 flex justify-between items-center">
            <p class="text-sm text-slate-500" id="statusMsg">Harap selesaikan pemeriksaan sistem.</p>
            <form asp-action="BeginInterview" method="post">
                <button type="submit" id="btnStart" disabled class="px-6 py-2.5 bg-slate-300 text-slate-500 font-semibold rounded-lg cursor-not-allowed transition-all shadow-sm">
                    Mulai Interview
                </button>
            </form>
        </div>
    </div>
</div>

<canvas id="canvas" class="hidden"></canvas>

<style>
    @@keyframes scan {
        0% { top: 0%; opacity: 0; }
        10% { opacity: 1; }
        90% { opacity: 1; }
        100% { top: 100%; opacity: 0; }
    }
</style>

@section Scripts {
    <!-- Load Face API -->
    <script src="https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/dist/face-api.min.js"></script>

    <script>
        const video = document.getElementById('webcam');
        const overlay = document.getElementById('loadingOverlay');
        const scanOverlay = document.getElementById('scanOverlay');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const btnStart = document.getElementById('btnStart');
        const statusMsg = document.getElementById('statusMsg');
        const aiLabels = document.getElementById('aiLabels');

        // State Check
        let checks = {
            mic: false,
            cam: false,
            light: false,
            face: false,
            attire: false
        };

        function updateCheckUI(id, passed, msg) {
            const el = document.getElementById(id);
            const icon = el.querySelector('.status-icon');
            const dot = el.querySelector('.status-dot');
            const text = el.querySelector('.status-text');

            text.innerText = msg;
            
            if(passed) {
                el.classList.remove('border-red-200', 'bg-red-50');
                el.classList.add('border-green-200', 'bg-green-50');
                
                icon.classList.remove('bg-slate-100', 'text-slate-400', 'bg-red-100', 'text-red-600');
                icon.classList.add('bg-green-100', 'text-green-600');
                
                dot.classList.remove('bg-slate-300', 'bg-red-500');
                dot.classList.add('bg-green-500');
            } else {
                el.classList.remove('border-green-200', 'bg-green-50');
                icon.classList.remove('bg-green-100', 'text-green-600');
                dot.classList.remove('bg-green-500');
                
                if(msg.includes("Gagal") || msg.includes("Gelap") || msg.includes("Tidak") || msg.includes("Ditolak")) {
                    el.classList.add('border-red-200', 'bg-red-50');
                    icon.classList.add('bg-red-100', 'text-red-600');
                    dot.classList.add('bg-red-500');
                } else {
                    // Pending / Reset
                    el.classList.remove('border-red-200', 'bg-red-50');
                    icon.classList.add('bg-slate-100', 'text-slate-400');
                    dot.classList.add('bg-slate-300');
                }
            }
        }

        function checkAllPassed() {
            // Check overall status
            const allPassed = checks.mic && checks.cam && checks.light && checks.face && checks.attire;

            if (allPassed) {
                btnStart.disabled = false;
                btnStart.classList.remove('bg-slate-300', 'text-slate-500', 'cursor-not-allowed');
                btnStart.classList.add('bg-brand-600', 'text-white', 'hover:bg-brand-700', 'hover:shadow-lg');
                statusMsg.innerText = "Semua sistem siap. Silakan mulai.";
                statusMsg.classList.remove('text-slate-500', 'text-red-500');
                statusMsg.classList.add('text-green-600', 'font-medium');
                
                if(!overlay.classList.contains('hidden')) {
                     overlay.style.opacity = '0';
                     setTimeout(() => overlay.classList.add('hidden'), 500);
                }
            } else {
                btnStart.disabled = true;
                btnStart.classList.add('bg-slate-300', 'text-slate-500', 'cursor-not-allowed');
                btnStart.classList.remove('bg-brand-600', 'text-white', 'hover:bg-brand-700', 'hover:shadow-lg');
                statusMsg.innerText = "Menunggu semua indikator hijau...";
                statusMsg.classList.remove('text-green-600');
                statusMsg.classList.add('text-slate-500');
            }
        }

        async function initDevices() {
            try {
                // Initialize Face API models
                await faceapi.nets.tinyFaceDetector.loadFromUri('https://raw.githubusercontent.com/justadudewhohacks/face-api.js/master/weights');
                
                const stream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
                video.srcObject = stream;
                
                if(stream.getAudioTracks().length > 0) {
                    checks.mic = true;
                    updateCheckUI('checkMic', true, "Aktif & Jernih");
                }

                if(stream.getVideoTracks().length > 0) {
                    checks.cam = true;
                    updateCheckUI('checkCam', true, "HD Ready");
                }

                video.onloadedmetadata = () => {
                    overlay.classList.add('hidden');
                    scanOverlay.classList.remove('hidden');
                    aiLabels.style.opacity = '1';
                    
                    analyzeLoop();
                };

            } catch (err) {
                console.error(err);
                alert("Gagal memuat sistem: " + err.message);
                updateCheckUI('checkCam', false, "Akses Gagal");
            }
        }

        async function analyzeLoop() {
            if (!checks.cam) return;

            // 1. Light Check
            canvas.width = video.videoWidth / 4; 
            canvas.height = video.videoHeight / 4;
            ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
            
            const frame = ctx.getImageData(0, 0, canvas.width, canvas.height);
            const data = frame.data;
            let totalBrightness = 0;

            for (let i = 0; i < data.length; i += 4) {
                totalBrightness += (data[i] + data[i + 1] + data[i + 2]) / 3;
            }
            const avgBrightness = totalBrightness / (data.length / 4);

            if (avgBrightness > 80) {
                checks.light = true;
                updateCheckUI('checkLight', true, "Cahaya Cukup");
            } else {
                checks.light = false;
                updateCheckUI('checkLight', false, "Terlalu Gelap!");
            }

            // 2. Face Detection
            const detections = await faceapi.detectSingleFace(video, new faceapi.TinyFaceDetectorOptions());
            
            if (detections) {
                checks.face = true;
                // Neatness Logic: If Face Detected AND Light Good -> Pass Neatness
                if(checks.light) {
                    checks.attire = true;
                    updateCheckUI('checkAttire', true, "Wajah & Kerapian Oke");
                } else {
                    checks.attire = false;
                    updateCheckUI('checkAttire', false, "Lampu Kurang Terang");
                }
            } else {
                checks.face = false;
                checks.attire = false;
                updateCheckUI('checkAttire', false, "Wajah Tidak Terdeteksi");
            }

            checkAllPassed();
            requestAnimationFrame(analyzeLoop);
        }

        initDevices();

    </script>
}
