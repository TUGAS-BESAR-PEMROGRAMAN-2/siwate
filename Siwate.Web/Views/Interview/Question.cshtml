@model Siwate.Web.Models.Question

@{
    ViewData["Title"] = "Pertanyaan Wawancara";
}

<div class="max-w-2xl mx-auto py-8">
    <div class="flex items-center justify-between mb-6">
        <span class="bg-brand-100 text-brand-700 px-3 py-1 rounded-full text-sm font-semibold">Sesi Wawancara</span>
        <span class="text-slate-400 text-sm">Pertanyaan #@Model.Id.GetHashCode().ToString().Substring(0, 4)</span>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden mb-8">
        <div class="p-8">
            
            @if (ViewBag.FollowUpQuestion != null)
            {
                <div class="mb-6 bg-orange-50 border-l-4 border-orange-500 p-4 rounded-r">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-orange-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-orange-700">
                                Jawaban Anda sebelumnya perlu diperjelas.
                            </p>
                        </div>
                    </div>
                </div>
                
                <p class="text-slate-500 text-sm mb-2 uppercase tracking-wide font-semibold">Pertanyaan Lanjutan AI:</p>
                <h2 class="text-2xl font-bold text-slate-800 mb-6 leading-relaxed">
                    "@ViewBag.FollowUpQuestion"
                </h2>
                
                <div class="mb-4 p-4 bg-slate-50 rounded-lg border border-slate-200">
                    <p class="text-xs text-slate-400 mb-1">Jawaban Sebelumnya:</p>
                    <p class="text-slate-600 italic text-sm line-clamp-3">"@ViewBag.PreviousAnswer"</p>
                </div>
            }
            else
            {
                 <h2 class="text-2xl font-bold text-slate-800 mb-6 leading-relaxed">
                    "@Model.QuestionText"
                </h2>
            }

            <form asp-action="SubmitAnswer" method="post" id="answerForm">
                <input type="hidden" name="questionId" value="@Model.Id" />
                <input type="hidden" name="durationSeconds" id="durationSeconds" value="0" />
                <input type="hidden" name="attempt" value="@(ViewBag.Attempt ?? 1)" />
                <input type="hidden" name="previousAnswer" value="@(ViewBag.PreviousAnswer ?? "")" />
                
                <div class="mb-6">
                    <label for="answerText" class="block text-sm font-medium text-slate-700 mb-2">Jawaban Anda:</label>
                    <div class="relative">
                        <textarea name="answerText" id="answerText" rows="6" 
                            class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-all text-slate-700 pr-12"
                            placeholder="Ketik jawaban Anda di sini sejelas mungkin..."></textarea>
                        
                        <!-- Mic Button -->
                        <button type="button" id="btnMic" class="absolute bottom-3 right-3 p-2 bg-slate-100 hover:bg-brand-100 text-slate-500 hover:text-brand-600 rounded-full transition-all" title="Bicara untuk menjawab">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path></svg>
                        </button>
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center text-slate-400 text-sm gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        <span id="timerDisplay">00:00</span>
                    </div>
                    <button type="submit" class="bg-brand-600 hover:bg-brand-700 text-white font-semibold px-6 py-2 rounded-lg shadow-sm hover:shadow-md transition-all">
                        Kirim Jawaban
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="text-center text-slate-400 text-sm">
        <p>Tips: Gunakan metode STAR (Situation, Task, Action, Result) untuk jawaban terbaik.</p>
    </div>
</div>

<script>
    /* Timer Logic */
    let seconds = 0;
    const timerDisplay = document.getElementById('timerDisplay');
    const durationInput = document.getElementById('durationSeconds');

    // Only start timer if elements exist to avoid null errors
    if (timerDisplay && durationInput) {
        setInterval(() => {
            seconds++;
            durationInput.value = seconds;
            
            const mins = Math.floor(seconds / 60).toString().padStart(2, '0');
            const secs = (seconds % 60).toString().padStart(2, '0');
            timerDisplay.textContent = `${mins}:${secs}`;
        }, 1000);
    }

    /* Speech-to-Text Logic (Web Speech API) */
    const startMic = document.getElementById('btnMic');
    const answerInput = document.getElementById('answerText');
    
    // Standard API or Webkit fallback
    const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
    let recognition;

    if (SpeechRecognition && startMic && answerInput) {
        recognition = new SpeechRecognition();
        recognition.continuous = false;
        recognition.lang = 'id-ID'; // Bahasa Indonesia
        recognition.interimResults = false;

        recognition.onstart = function() {
            startMic.classList.remove('bg-slate-100', 'text-slate-500');
            startMic.classList.add('bg-red-100', 'text-red-500', 'animate-pulse');
        };

        recognition.onend = function() {
            startMic.classList.remove('bg-red-100', 'text-red-500', 'animate-pulse');
            startMic.classList.add('bg-slate-100', 'text-slate-500');
        };

        recognition.onresult = function(event) {
            const transcript = event.results[0][0].transcript;
            
            // Append to existing text with a space if needed
            const currentText = answerInput.value;
            if (currentText && currentText.trim().length > 0) {
                 answerInput.value = currentText.trim() + " " + transcript;
            } else {
                 answerInput.value = transcript;
            }
        };

        recognition.onerror = function(event) {
            console.error("Speech recognition error", event.error);
            startMic.classList.remove('bg-red-100', 'text-red-500', 'animate-pulse');
            startMic.classList.add('bg-slate-100', 'text-slate-500');
            if (event.error === 'not-allowed') {
                alert("Akses mikrofon ditolak. Mohon izinkan akses mikrofon di browser Anda.");
            }
        };

        startMic.addEventListener('click', () => {
            try {
                recognition.start();
            } catch (e) {
                console.error("Failed to start recognition:", e);
                // Handle case where recognition might already be started
                recognition.stop();
            }
        });
    } else {
        if (startMic) {
            startMic.style.display = 'none'; // Hide if not supported
        }
        console.log("Web Speech API not supported in this browser or elements missing.");
    }
</script>
